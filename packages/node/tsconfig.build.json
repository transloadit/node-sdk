{
  "include": ["src"],
  "exclude": ["test", "coverage", "dist", "examples"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "erasableSyntaxOnly": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "allowImportingTsExtensions": true,
    "target": "ES2022",
    "noImplicitOverride": true,
    "rewriteRelativeImportExtensions": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true
  }
}
